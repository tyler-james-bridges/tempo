{
  "name": "tempo-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "npm run start --workspace=@tempo/mobile",
    "dev:web": "npm run dev --workspace=@tempo/web",
    "build:web": "npm run build --workspace=@tempo/web",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "turbo": "^2.5.0"
  },
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "convex": "^1.31.6",
    "expo": "~54.0.30",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "svix": "^1.84.1"
  }
}
